        <!--Automationen -->
        <control type="group" id="138">
            <visible>true</visible>
            <posx>280</posx>
            <posy>370</posy>
            <height>50</height>
            <width>328</width>
            <control type="label" id="140">
                <posx>40</posx>
                <posy>0</posy>
                <width>200</width>
                <height>50</height>
                <visible>true</visible>
                <aligny>center</aligny>
                <label>Automationen</label>
                <font>font14</font>
            </control>
