<window id="1234" type="dialog">
    <backgroundcolor>backgroundcolor</backgroundcolor>
    <include>MainWindowMouseButtons</include>
    <allowoverlay>no</allowoverlay>
    <visible>true</visible>
    <coordinates>
        <system>1</system>
        <posX>200</posX>
        <posY>100</posY>
    </coordinates>
    <controls>
        <control type="image">
            <description>media info background image</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1530</width>
            <height>720</height>
            <texture border="20,0,0,0" flipx="true">background2.png</texture>
        </control>
        <control type="image">
            <posx>250</posx>
            <posy>40</posy>
            <width>400</width>
            <height>500</height>
            <texture border="15">ContentPanel2.png</texture>
        </control>
        <control type="button">
            <description>Close Window button</description>
            <posx>580</posx>
            <posy>50</posy>
            <width>64</width>
            <height>32</height>
            <label>-</label>
            <font>-</font>
            <onclick>back</onclick>
            <texturefocus>DialogCloseButton-focus.png</texturefocus>
            <texturenofocus>DialogCloseButton.png</texturenofocus>
            <visible>system.getbool(input.enablemouse)</visible>
            <aspectratio>keep</aspectratio>
        </control>

        <!--title separator -->
        <control type="image">
            <posx>225</posx>
            <posy>90</posy>
            <width>440</width>
            <height>3</height>
            <texture>separator.png</texture>
        </control>
        <!-- end title separator -->

        <!--up-down buttons -->
        <control type="group" id="114">
            <visible>true</visible>
            <posx>-350</posx>
            <posy>-420</posy>
            <height>100</height>
            <width>200</width>
            <control type="button" id="112">
                <posx>95</posx>
                <posy>0</posy>
                <width>30</width>
                <height>30</height>
                <texturefocus>scroll-down-focus-2.png</texturefocus>
                <texturenofocus>scroll-down-2.png</texturenofocus>
            </control>
            <control type="button" id="113">
                <posx>125</posx>
                <posy>0</posy>
                <width>30</width>
                <height>30</height>
                <texturefocus>scroll-up-focus-2.png</texturefocus>
                <texturenofocus>scroll-up-2.png</texturenofocus>
            </control>
        </control>
        <!--end up-down buttons -->

        <!--switch buttons -->
        <control type="group" id="118">
            <visible>true</visible>
            <posx>-350</posx>
            <posy>-120</posy>
            <height>50</height>
            <width>150</width>
            <control type="label" id="115">
                <posx>80</posx>
                <posy>0</posy>
                <width>50</width>
                <height>50</height>
                <visible>true</visible>
                <align>center</align>
                <aligny>center</aligny>
                <label>ON</label>
                <font>font14</font>
            </control>
            <control type="radiobutton" id="116">
                <posx>130</posx>
                <posy>0</posy>
                <width>30</width>
                <height>50</height>
                <visible>true</visible>
                <textureradioonfocus>radiobutton-focus.png</textureradioonfocus>
                <textureradioonnofocus>radiobutton-focus.png</textureradioonnofocus>
                <textureradioofffocus>radiobutton-nofocus.png</textureradioofffocus>
                <textureradiooffnofocus>radiobutton-nofocus.png</textureradiooffnofocus>
                <texturefocus border="5">button-nofocus.png</texturefocus>
                <texturenofocus>-</texturenofocus>
                <label>-</label>
                <align>center</align>
                <aligny>center</aligny>
            </control>
            <control type="label" id="117">
                <posx>160</posx>
                <posy>0</posy>
                <width>50</width>
                <height>50</height>
                <visible>true</visible>
                <align>center</align>
                <aligny>center</aligny>
                <label>OFF</label>
                <font>font14</font>
            </control>
        </control>
        <!--end switch buttons -->
    </controls>
</window>
