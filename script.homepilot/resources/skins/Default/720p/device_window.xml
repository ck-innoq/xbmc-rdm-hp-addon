                <posx>0</posx>
                <posy>50</posy>
                <width>328</width>
                <height>260</height>
                <onright>144</onright>
                <pagecontrol>144</pagecontrol>
                <itemlayout height="87" width="305">
                    <control type="image">
                        <posx>0</posx>
                        <posy>5</posy>
                        <width>24</width>
                        <height>24</height>
                        <info>ListItem.Icon</info>
                    </control>
                    <control type="textbox">
                        <posx>50</posx>
                        <posy>0</posy>
                        <width>280</width>
                        <height>85</height>
                        <wrapmultiline>true</wrapmultiline>
                        <font>font12</font>
                        <textcolor>grey2</textcolor>
                        <selectedcolor>selected</selectedcolor>
                        <align>left</align>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="87" width="305">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>750</width>
                        <height>75</height>
                        <texture border="0,2,0,2">MenuItemFO.png</texture>
                        <visible>Control.HasFocus(142)</visible>
                    </control>
                    <control type="image">
                        <posx>0</posx>
                        <posy>5</posy>
                        <width>24</width>
                        <height>24</height>
                        <info>ListItem.Icon</info>
                    </control>
                    <control type="textbox">
                        <posx>50</posx>
                        <posy>0</posy>
                        <width>280</width>
                        <height>85</height>
                        <font>font12</font>
                        <wrapmultiline>true</wrapmultiline>
                        <textcolor>white</textcolor>
                        <selectedcolor>selected</selectedcolor>
                        <align>left</align>
                        <label>$INFO[ListItem.Label]</label>
                        <visible>Control.HasFocus(142)</visible>
                    </control>
                </focusedlayout>
            </control>
